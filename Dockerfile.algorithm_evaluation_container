FROM python:3.10.18

WORKDIR /app
COPY requirements_algorithm_evaluation_workpool.txt /app/

ENV TZ=Asia/Shanghai
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* && \
    pip install --no-cache-dir --upgrade pip -i https://pypi.tuna.tsinghua.edu.cn/simple && \
    pip install --no-cache-dir git+https://shengzhiwei:Shengzw0387.@gitea.ajiot.net/AEO/ods_trading_platform_common.git && \
    pip install --no-cache-dir -r requirements_algorithm_evaluation_workpool.txt && \
    rm -rf /root/.cache/pip /tmp/*
